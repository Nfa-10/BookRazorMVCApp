@model DemoBookApp.Models.UserModel
@{
    ViewData["Title"] = "Login Page";
}

<h1>Login</h1>
<br/>
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5> Enter Credentials</h5>
            </div>
            <div class="card-body">
                <form method="post">

                    <input class="form-control mb-3" type="text" name="emailOrUsername" placeholder="Email or Username" />
                    <input class="form-control" type="password" name="password" placeholder="Password" />
                    <br />
                    <button class="btn btn-success">Log In</button>

                </form>
            </div>
            <div class="card-footer">
                <p style="color:darkred">@ViewBag.Messsage </p>
            </div>
        </div>
    </div>
</div>