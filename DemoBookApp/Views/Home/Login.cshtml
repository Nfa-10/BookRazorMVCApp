@model DemoBookApp.Models.UserModel
@{
    ViewData["Title"] = "Login Page";
}

<h1>Login</h1>
<br />
<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5> Enter Credentials</h5>
            </div>
            <div class="card-body">
                <form method="post">

                    <input class="form-control mb-3" type="text" asp-for="emailOrUsername" placeholder="Email or Username" />
                    <span asp-validation-for="emailOrUsername" class="text-danger"></span>
                    <input asp-for="password" class="form-control" type="password" placeholder="Password" />
                    <span asp-validation-for="password" class="text-danger"></span>
                    <br />
                    <button class="btn btn-success">Log In</button>

                </form>
            </div>
            <div class="card-footer">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
    </div>
</div>
