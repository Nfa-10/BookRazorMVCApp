@model DemoBookApp.Models.AuthorModel
@{
    ViewData["Title"] = "Details";
    var temp = (Model.Gender == 1 ? "Male" : "Female");
}

<h1>Details Page</h1>


<hr />

<div class="row">
    <div class="col-4">
        <div class="card">
            <div class="card-header">
                <h5> Author Details</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-3">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Gender)
                    </dt>
                    <dd class="col-sm-4">
                        @temp
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

