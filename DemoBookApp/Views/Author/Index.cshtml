@model IEnumerable<DemoBookApp.Models.AuthorModel>

@{
    ViewData["Title"] = "List of Authors";

}

<h4> Create New Author</h4>
<form>
    <input asp-action="Create" type="submit" value="Create" class="btn btn-outline-primary" />
</form>
<br />
<h1>List of Authors</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <form>
                        <input asp-action="Edit" asp-route-id="@item.Id" type="submit" value="Edit" class="btn btn-dark" /> |
                        <input asp-action="Details" asp-route-id="@item.Id" type="submit" value="Show Details" class="btn btn-primary" /> |
                        <input asp-action="Delete" asp-route-id="@item.Id" type="submit" value="Delete" class="btn btn-danger" /> |
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
