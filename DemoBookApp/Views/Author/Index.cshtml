@model IEnumerable<DemoBookApp.Models.AuthorModel>

@{
    ViewData["Title"] = "List of Authors";

}

<h4> Create New Author</h4>
<form>
    <input asp-controller="Book" asp-action="Index" type="submit" value="Back To BookList" class="btn btn-outline-primary" />
    <input asp-action="Create" type="submit" value="Create" class="btn btn-outline-primary" />


</form>
<br />
<h1>List of Authors</h1>
<form asp-controller="Author" asp-action="Index">
    <p>
        Keyword: <input type="text" name="SearchString" placeholder="Type Keyword..." />
        <input class="btn btn-outline-dark" type="submit" value="Search" />
    </p>
    <p style="color:darkred">@ViewBag.Messsage </p>



</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" type="submit" value="Edit" class="btn btn-dark">Edit </a>
                    <a asp-action="Details" asp-route-id="@item.Id" type="submit" value="Show Details" class="btn btn-primary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" type="submit" value="Delete" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
